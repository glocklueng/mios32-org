
RESET_HW

LCD "%CUnicolour Example"


# test LEDs on the 16x4 Button/Duo-LED matrix
# Schematic: http://www.ucapps.de/mbhp/button_duoled_matrix.pdf

# only LEDs configured here:
DOUT_MATRIX n=1  rows=4  inverted=0  sr_dout_sel1=1  sr_dout_r1=2  sr_dout_g1=3  \
                 led_emu_id_offset=1001 \
                 unicolour=1  colour_level_r=15  colour_level_g=15  colour_level_b=15

DOUT_MATRIX n=2  rows=4  inverted=0  sr_dout_sel1=4  sr_dout_r1=5  sr_dout_g1=6 \
                 led_emu_id_offset=1031 \
                 unicolour=1  colour_level_r=15  colour_level_g=15  colour_level_b=15


# change R/G/B with CC#16..18
# within the range 0:15
EVENT_RECEIVER  id=1  fwd_id=SENDER:11  type=CC cc=16  range=0:15  fwd_to_lcd=1  lcd_pos=1:1:2   label="R=%2d"
EVENT_RECEIVER  id=2  fwd_id=SENDER:12  type=CC cc=17  range=0:15  fwd_to_lcd=1  lcd_pos=1:6:2   label="G=%2d"
EVENT_RECEIVER  id=3  fwd_id=SENDER:13  type=CC cc=18  range=0:15  fwd_to_lcd=1  lcd_pos=1:11:2  label="B=%2d"

# get the values from id=1..3
EVENT_SENDER  id=11  type=Meta  meta=SetColourRFromValue:1  meta=SetColourRFromValue:2
EVENT_SENDER  id=12  type=Meta  meta=SetColourGFromValue:1  meta=SetColourGFromValue:2
EVENT_SENDER  id=13  type=Meta  meta=SetColourBFromValue:1  meta=SetColourBFromValue:2


